---
import NavLink from "./NavLink.astro";
import Logo from "~/assets/img/logo.jpg";
import { Image } from "@astrojs/image/components";
---

<header class="sticky mb-4 flex flex-row items-center md:mb-6">
  <div class="flex-1">
    <h1 class="text-3xl font-black text-yellow-400 md:text-4xl">Brendan</h1>
  </div>
  <nav class="sticky text-lg md:text-xl">
    <ul class="flex flex-row items-end space-x-4">
      <NavLink to="/">Home</NavLink>
      <NavLink to="/blog">Blog</NavLink>
      <NavLink href="https://github.com/brendonovich">GitHub</NavLink>
    </ul>
  </nav>
  <div class="hidden flex-1 md:block">
    <Image
      src={Logo}
      class="ml-auto w-14 h-14 rounded-lg border-black border"
      alt="Brendonovich Logo"
    />
  </div>
</header>
